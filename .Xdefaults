URxvt.geometry: 90x26
URxvt.scrollBar: false

! Jigmo font should be set smaller than others;
!
! Jetbrains Mono NL may not be available on some distros, like linuxmint.
! So use "Jetbrains Mono", remove "NL" from it.
URxvt.font: xft:Jetbrains Mono:pixelsize=16, \
    xft:Noto Sans CJK SC:style=regular, \
    xft:WenQuanYi Zen Hei Mono, \
    xft:Jigmo:pixelsize=15, \
    xft:Jigmo2:pixelsize=15, \
    xft:Jigmo3:pixelsize=15

! some bold color are hard to view
URxvt.color10: Green2
URxvt.color11: Gold1
URxvt.color14: Cyan2
