URxvt.geometry: 90x26
URxvt.scrollBar: false

! Jigmo font should be set smaller than others;
!
! Jetbrains Mono NL may not be available on some distros, like linuxmint.
! So use "Jetbrains Mono", remove "NL" from it.
URxvt.font: xft:Jetbrains Mono:pixelsize=16, \
    xft:Noto Sans CJK SC:style=regular, \
    xft:WenQuanYi Zen Hei Mono, \
    xft:Jigmo:pixelsize=15, \
    xft:Jigmo2:pixelsize=15, \
    xft:Jigmo3:pixelsize=15

! some bold color are hard to view
URxvt.color10: Green2
URxvt.color11: Gold1
URxvt.color14: Cyan2

! make ctrl-shift bindable.
URxvt.iso14755: false

! extentions
URxvt.perl-ext-common: eval,font-size,searchable-scrollback,selection-to-clipboard

URxvt.keysym.M-c: eval:selection_to_clipboard
URxvt.keysym.M-v: eval:paste_clipboard

!URxvt.keysym.M-f: searchable-scrollback:start
! avoid default binding M-s
URxvt.searchable-scrollback: M-f

URxvt.keysym.A-minus: font-size:decrease
URxvt.keysym.A-equal: font-size:increase
URxvt.keysym.A-0: font-size:reset
