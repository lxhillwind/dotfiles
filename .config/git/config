# vim:noet:sw=0:ft=gitconfig
#
# Create file ~/.gitconfig before `git config --global xxx`,
# otherwise git will write to $XDG_CONFIG_HOME/git/config

[merge]
	tool = vimdiff
[mergetool "vimdiff"]
	path = nvim
[diff]
	tool = vimdiff
[difftool "vimdiff"]
	path = nvim
[alias]
	a = !git config --get-regexp alias. | sort
	archive-worktree = !f() { cd "${GIT_PREFIX:-.}/$1" || return -1 \n git ls-files 2>/dev/null | xargs tar -cf /dev/stdout -- \n } \n f
	sh = !zsh
	g = !git --git-dir ~/dotfiles/.git --work-tree ~

	au = add -u
	dc = diff --cached
	dw = diff --color-words=.
	dcw = diff --cached --color-words=.

	tag-ver = tag --sort=-version:refname

	vim = !git -C ~/vimfiles/pack/git
	vim-doc = !git vim submodule foreach nvim -Es -c 'sil! helpt doc'

	vim-opt = !git -C ~/vimfiles/pack/git/opt
	vim-start = !git -C ~/vimfiles/pack/git/start
[mergetool]
	keepBackup = false
[pull]
	rebase = false
[core]
	quotepath = off
[tag]
	sort = -creatordate
[log]
	date = local
