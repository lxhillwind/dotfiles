{
    "title": "ctrl-space to ctrl-shift (unless utm; for fcitx5)",
    "rules": [
        {
            "description": "ctrl-space to ctrl-shift (unless utm; for fcitx5)",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^com.utmapp.UTM$"
                            ],
                            "type": "frontmost_application_unless"
                        }
                    ],
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "modifiers": [
                                "left_shift"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
