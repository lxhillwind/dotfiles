{
    "title": "Change escape to backtick if pressed with command",
    "rules": [
        {
            "description": "Change escape to backtick if pressed with command",
            "manipulators": [
                {
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "grave_accent_and_tilde",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "grave_accent_and_tilde",
                            "modifiers": [
                                "right_command"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
