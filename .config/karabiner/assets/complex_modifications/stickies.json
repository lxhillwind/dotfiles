{
    "title": "stickies",
    "rules": [
        {
            "description": "make paste (Command+v) match style in stickies",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^com.apple.Stickies$"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "v",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "v",
                            "modifiers": [
                                "option",
                                "shift",
                                "command"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
