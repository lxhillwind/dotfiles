" quickmark (native) {{{2
command quickmark_fs js -p if (/^[a-zA-Z0-9]$/.test(JS_ARG)) tri.excmds.composite('magic_define').then(_ => tri.lx.sh(`gvim ~/.tridactylrc +"normal G" +"keeppatterns ?^quickmark " +"r !printf ${btoa(document.location)} | base64 -d" +"normal Iquickmark ${JS_ARG} "`).then(_ => tri.excmds.fillcmdline(`quickmark ${JS_ARG}`)))

bind M gobble 1 quickmark_fs

" qrcode {{{2
" Why using qrcode_visual, instead of using text2qr directly? {{{
" because if we did that, then in visual mode, contextMenus gen qrcode won't
" work as expected: it will gen qrcode for current url instead of selection. }}}
command qrcode js -d● let text = document.location.toString(); if (JS_ARGS.length > 1) { if (JS_ARGS.length === 2 && JS_ARGS[1] === 'qrcode_visual') text = document.getSelection().toString(); else text = JS_ARGS.join(' '); } tri.excmds.text2qr('--popup', text)●
command qrcode_visual qrcode qrcode_visual
bind --mode=visual cq qrcode_visual

" edit selection in vim (native) {{{2
bind --mode=visual <C-i> js tri.excmds.composite('magic_define').then(_ => tri.lx.sh(`gvim -f -`, document.getSelection().toString()))

" notepad (add selection and url to a text file) (native) {{{2
command save_notes js let utoa = data => btoa(unescape(encodeURIComponent(data))); let text = "\n\n---\n\n" + `[${document.title}](${document.location})` + "\n\n" + document.getSelection().toString().replace(/^/gm, ' '.repeat(4)); tri.excmds.composite('magic_define').then(_ => tri.lx.sh(`gvim ~/notes-local/read-it-later/_web-clip-text.md +"norm G" +"silent r !printf ${utoa(text)} | base64 -d"`))
bind --mode=visual cs save_notes

" custom Menus {{{1
jsb browser.contextMenus.create({ id: "qrcode", title: "生成二维码: 当前网址", contexts: ["page"], });
jsb browser.contextMenus.create({ id: "qrcode_visual", title: "生成二维码: '%s'", contexts: ["selection"], });
jsb browser.contextMenus.create({ id: "save_notes", title: "保存笔记...: '%s'", contexts: ["selection"], });

" NOTE: avoid addListener repeatedly.
jsb if (tri.lx_menus_listener) browser.contextMenus.onClicked.removeListener(tri.lx_menus_listener); \
tri.lx_menus_listener = (info, tab) => { \
    if (info.menuItemId === "qrcode") { tri.excmds.composite('qrcode'); } \
    if (info.menuItemId === "qrcode_visual") { tri.excmds.composite('qrcode_visual'); }; \
    if (info.menuItemId === "save_notes") { tri.excmds.composite('save_notes'); }; \
}; browser.contextMenus.onClicked.addListener(tri.lx_menus_listener);

