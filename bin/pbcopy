#!/bin/sh

if [ -e /usr/bin/pbcopy ]; then
    exec /usr/bin/pbcopy "$@"
else
    if [ -n "$WAYLAND_DISPLAY" ]; then
        exec wl-copy
    elif [ -n "$DISPLAY" ]; then
        exec xsel -ib
    elif [ -n "$TMUX" ]; then
        exec tmux loadb -
    elif [ -n "$SSH_CLIENT" ] && timeout 1 curl -s -f 10.0.2.2:8000/http-board-ping >/dev/null 2>&1; then
        exec curl -s 10.0.2.2:8000/api -X POST -F text='<-' -o /dev/null
    else
        :
    fi
fi
