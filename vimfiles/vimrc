# {{{
var lspConfig = [  # will be modified in LspAddServer, so do not use `const`
    {
        name: 'golang',
        filetype: ['go', 'gomod'],
        path: exepath('gopls'),
        args: ['serve'],
        syncInit: true,
    },
    {
        name: 'python',
        filetype: ['python'],
        path: exepath('pylsp'),
        args: [],
    },
    {
        name: 'scala',
        filetype: ['scala'],
        path: exepath('metals'),
        args: [],
    },
    {
        name: 'ziglang',
        filetype: ['zig'],
        path: exepath('zls'),
        args: [],
    },
] # }}}
->filter((_, i) => !i.path->empty())

if !empty(lspConfig) # {{{
    for ft in lspConfig->mapnew((_, i) => i.filetype)->flattennew()->sort()->uniq()
        execute $'au FileType {ft} LspSetup()'
    endfor

    var lsp_is_started = false
    def LspSetup()
        if !lsp_is_started
            lsp_is_started = true
            # no ! here.
            packadd lsp
            g:LspAddServer(lspConfig)
            g:LspOptionsSet({
                # :help lsp-options
                showDiagWithSign: false,
            })
        endif

        nnoremap <buffer> [g :LspDiag prev<CR>
        nnoremap <buffer> ]g :LspDiag next<CR>

        nnoremap <buffer> gd :LspGotoDefinition<CR>
        nnoremap <buffer> gy :LspGotoTypeDef<CR>
        nnoremap <buffer> gi :LspGotoImpl<CR>
        nnoremap <buffer> gr :LspShowReferences<CR>

        nnoremap <buffer> K :LspHover<CR>
    enddef
endif # }}}
# }}}2

